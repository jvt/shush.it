{{#if session.userID}}
<ul id="userdropdown" class="dropdown-content">
  <li><a href="/{{session.twitterScreenName}}/" class="blue-text text-lighten-2">My filters</a></li>
  <li><a href="/auth/destroy" class="blue-text text-lighten-2">Logout</a></li>
</ul>
{{/if}}
<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo waves-effect waves-default">Shush.it</a>
    <a href="#" data-activates="mobile-sidebar" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
      {{#unless session.userID}}
      <li><a href="/auth/twitter" class="waves-effect waves-default">Login with Twitter</a></li>
      {{/unless}}
      {{#if session.userID}}
      <li class="valign-wrapper">
        <img src="{{ session.twitterProfilePicture }}" id="UIUserPhoto" class="circle valign" />
        <a class="dropdown-button" href="#!" data-activates="userdropdown">
          @{{session.twitterScreenName}} <i class="material-icons right">arrow_drop_down</i>
        </a>
      </li>
      {{/if}}
      <li style="height:100px !important;overflow:hidden;">
        <form method="GET" action="/search">
          <div class="input-field waves-effect waves-default">
            <input id="search" type="search" required="true" name="q" placeholder="Search">
            <label for="search"><i class="material-icons light-blue-text text-lighten-2">search</i></label>
          </div>
        </form>
      </li>
    </ul>
    <ul class="side-nav" id="mobile-sidebar">
      <li>
        <form method="GET" action="/search">
          <div class="input-field waves-effect waves-default">
            <input id="search" type="search" required="true" name="q" placeholder="Search">
            <label for="search"><i class="material-icons light-blue-text text-lighten-2">search</i></label>
          </div>
        </form>
      </li>
      {{#unless session.userID}}
      <li><a href="/auth/twitter" class="waves-effect waves-default">Login with Twitter</a></li>
      {{/unless}}
      {{#if session.userID}}
      <li class="valign-wrapper">
        <img src="{{ session.twitterProfilePicture }}" id="UIUserPhoto" class="circle valign" />
        <p style="padding:0 10px;">@{{session.twitterScreenName}}</p>
      </li>
      <li><a href="/auth/destroy" class="blue-text text-lighten-2 right">Logout</a></li>
      {{/if}}
    </ul>
  </div>
</nav>
