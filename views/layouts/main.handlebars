<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Shush.it / {{ title }}</title>
  <link rel="stylesheet" href="/stylesheets/materialize.css">
  <link rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="/stylesheets/style.css"/>
  <link rel="stylesheet" href="/stylesheets/fontawesome.css"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body class="light-blue lighten-2">
  {{> navigation }}

  <main>
    {{#if messages.success}}
    <div class="container flash-message success">
      <div class="row">
        <div class="col s12 m12">
          <div class="card green lighten-1">
            <div class="card-content white-text">
              <span class="card-title"><i class="fa fa-check-circle fa-lg" style="position:relative;top:3px;"></i></span>
              {{ messages.success }}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
    {{#if messages.error}}
    <div class="container">
      <div class="row">
        <div class="col s12 m12">
          <div class="card red lighten-1">
            <div class="card-content white-text">
              {{ messages.error }}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
    {{{ body }}}
    {{#if session.userID}}
    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
      <a class="btn-floating btn-large red" href="/filter/new/">
        <i class="large material-icons">add</i>
      </a>
    </div>
    {{/if}}
  </main>

  {{> footer }}
  <script type="text/javascript" src="/components/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="/components/materialize/dist/js/materialize.min.js"></script>
  <script type="text/javascript" src="/javascripts/global.js"></script>
</body>
</html>