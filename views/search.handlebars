<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Search results - <span class="search-title">{{ query }}</span></span>
          <p>Number of results: {{ numResults }}</p>
        </div>
      </div>
    </div>
  </div>

  {{#unless numResults}}
  <div class="row">
  <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">No results</span>
          <p>Well this is awkward... We couldn't find any filters that satisfied your query.</p>
        </div>
      </div>
    </div>
  </div>
  {{/unless}}

  {{#each this.rowLayout }}
  <div class="row">
    {{#each this }}
      <div class="col s12 m6">
        <div class="card white">
          <div class="card-content light-blue-text text-lighten-2">
            <span class="card-title light-blue-text text-lighten-2"><a href="/filter/{{ this.attributes.id}}/">{{ this.attributes.title }}</a></span>
            <p>{{ this.attributes.description }}</p>
          </div>
          <div class="card-action">
            <a href="/filter/{{ this.attributes.id }}/">View More</a>
            <a href="/install/{{ this.attributes.id }}/" class="waves-effect waves-light">Install to Tweetbot</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  {{/each}}
</div>