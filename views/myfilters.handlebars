<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Your filters ({{ numFilters }})</span>
        </div>
      </div>
    </div>
  </div>
</div>
{{#unless filters}}
<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p class="center-align">Whoops, it doesn't look like you've submitted any filters. To add a new filter, go <a href="/filter/new" alt="Add a filter">here</a>.</p>
        </div>
      </div>
    </div>
  </div>
</div>
{{/unless}}
{{#if filters}}
<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card white darken-1">
        <div class="card-content blue-text text-lighten-2">
          <div class="collection">
            {{#filters}}
            <a href="/filter/{{this.id}}/" class="collection-item">{{this.title}}</a>
            {{/filters}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}