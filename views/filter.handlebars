<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{ filter.title }}</span>
          <a href="/install/{{ filter.id }}/" class="btn-floating btn-large waves-effect waves-dark white right si-overwrite-br add-to-tweetbot install-button">
            <span><i class="light-blue-text text-lighten-2 material-icons" style="width:auto !important;margin-left:5px;">play_for_work</i> <p class="blue-text text-lighten-2" style="display:inline-block;position:relative;top:-6px;">Add to Tweetbot</p></span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">Description</span>
          <p>{{ filter.description }}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">{{ filterType }}</span>
          <p>{{ filter.pattern }}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6 margin-bottom">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">Created by</span>
          <p> <i class="fa fa-twitter"></i> <a href="https://twitter.com/{{ owner.twitter_screenname }}">@{{ owner.twitter_screenname }}</a> </p>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card white">
        <div class="card-action">
          <a href="/install/{{ filter.id }}/" class="waves-effect waves-dark">Install to Tweetbot</a>
          <a href="/filter/{{ filter.id }}/preview" class="waves-effect waves-dark">Preview filter</a>
        </div>
      </div>
    </div>
  </div>
  {{#if createdByUser}}
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content light-blue-text text-lighten-2">
          <form action="/filter/{{ filter.id }}/delete/" method="POST" class="clearfix">
            <input type="hidden" value="{{ csrf }}" name="_csrf">
            <button type="submit" class="btn waves-effect waves-light red right">Delete filter</button>
          </form>
        </div>
      </div> 
    </div>
  </div>
  {{/if}}
