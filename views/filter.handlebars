<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{ filter.title }}</span>
          <a href="/install/{{ filter.id }}/" class="btn-floating btn-large waves-effect waves-dark white right si-overwrite-br add-to-tweetbot install-button">
            <i class="light-blue-text text-lighten-2 material-icons" style="width:auto !important;">add</i>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">Description</span>
          <p>{{ filter.description }}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">Regex</span>
          <p>{{ filter.pattern }}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">Created by</span>
          <p>Joe Torraca</p>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card white">
        <div class="card-action">
          <a href="/install/{{ filter.id }}/" class="waves-effect waves-light install-button">Install to Tweetbot</a>
        </div>
      </div>
    </div>
  </div>