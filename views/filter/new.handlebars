<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Add a filter</span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <form action="/filter/new/" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <input id="filterName" type="text" class="validate" name="filterName" length="75">
                <label for="filterName">Filter name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="filterDescription" class="materialize-textarea" name="filterDescription"  length="255"></textarea>
                <label for="filterDescription">Filter description</label>
              </div>
            </div>
            <div class="row">
              <p>
                <input name="filterType" type="radio" id="regex" value="regex" />
                <label for="regex">Regex</label>
            </p>
            <p>
              <input name="filterType" type="radio" id="pattern" value="keyword" />
              <label for="pattern">Keyword</label>
            </p>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="filterContent" class="materialize-textarea" name="filterContent" length="255"></textarea>
              <label for="filterContent">Filter</label>
            </div>
          </div>
          <div class="row">
            <button class="btn waves-effect waves-light right light-blue blue-lighten-2" type="submit" name="action">
              <span style="position:relative;top:-4px;">Submit</span>
              <i class="material-icons">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>