<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Most downloaded filters</span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    {{#each topFilters}}
    <div class="col s12 m6">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">{{ filter.title }}</span>
          <p>{{ filter.description }}</p>
        </div>
        <div class="card-action">
          <a href="/filter/{{ filter.id }}">View More</a>
          <a href="/install/{{ filter.id }}">Install to Tweetbot</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
