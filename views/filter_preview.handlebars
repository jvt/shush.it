<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{ filter.title }}</span>
          <a href="/install/{{ filter.id }}/" class="btn-floating btn-large waves-effect waves-dark white right si-overwrite-br add-to-tweetbot"><i class="light-blue-text text-lighten-2 material-icons">play_for_work</i></a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      <div class="card white">
        <div class="card-content light-blue-text text-lighten-2">
          <span class="card-title light-blue-text text-lighten-2">Preview</span>
        </div>
        <div>
          {{#each tweets}}
          <div class="UITweetBox{{#if filtered}} UIFilteredTweet{{/if}}">
            <img src="{{ user.profile_image_url }}" class="circle" />
            <div class="UITweetContent">
              <div class="UITweetPoster">{{ user.name }}</div>
              <div class="UITweetText">{{ text }}</div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
